{
  "$schema": "https://schemas.wp.org/wp/6.3/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "custom": true,
      "defaultPalette": false,
      "palette": [
        { "slug": "gotham-midnight", "name": "Gotham Midnight", "color": "#0b1d2a" },
        { "slug": "skyline-gray", "name": "Skyline Gray", "color": "#4c5b68" },
        { "slug": "signal-yellow", "name": "Signal Yellow", "color": "#f2b705" },
        { "slug": "beacon-red", "name": "Beacon Red", "color": "#d43a3a" },
        { "slug": "primary", "name": "Primary Accent", "color": "#33d1ff" },
        { "slug": "secondary", "name": "Secondary Accent", "color": "#1aa5d1" },
        { "slug": "surface", "name": "Surface Background", "color": "#f4f6fb" },
        { "slug": "surface-dark", "name": "Surface Background (Dark)", "color": "#0f1115" },
        { "slug": "foreground", "name": "Primary Text", "color": "#0f172a" },
        { "slug": "foreground-dark", "name": "Primary Text (Dark)", "color": "#e7eaee" },
        { "slug": "muted", "name": "Muted Surface", "color": "#e6edf7" },
        { "slug": "muted-dark", "name": "Muted Surface (Dark)", "color": "#161b2a" },
        { "slug": "link", "name": "Link", "color": "#0f172a" },
        { "slug": "link-hover", "name": "Link Hover", "color": "#1aa5d1" }
      ]
    },
    "layout": {
      "contentSize": "1080px",
      "wideSize": "1280px"
    },
    "spacing": {
      "units": ["px", "rem", "em", "%", "vw", "vh"],
      "blockGap": "var(--grid-gap, 24px)"
    },
    "typography": {
      "customFontSize": true,
      "fluid": false,
      "fontFamilies": [
        {
          "slug": "body",
          "name": "Body",
          "fontFamily": "var(--font-family-body, \"Inter\", \"Segoe UI\", system-ui, -apple-system, BlinkMacSystemFont, \"Helvetica Neue\", Arial, sans-serif)"
        },
        {
          "slug": "heading",
          "name": "Headings",
          "fontFamily": "var(--font-family-heading, \"Merriweather\", \"Georgia\", \"Times New Roman\", serif)"
        }
      ],
      "fontSizes": [
        { "slug": "small", "name": "Small", "size": "0.875rem" },
        { "slug": "default", "name": "Default", "size": "1rem" },
        { "slug": "large", "name": "Large", "size": "1.25rem" },
        { "slug": "display", "name": "Display", "size": "2rem" }
      ],
      "lineHeight": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--bg, #f4f6fb)",
      "text": "var(--fg, #0f172a)"
    },
    "typography": {
      "fontFamily": "var(--font-family-body, \"Inter\", \"Segoe UI\", system-ui, -apple-system, BlinkMacSystemFont, \"Helvetica Neue\", Arial, sans-serif)",
      "lineHeight": "var(--line-height-body, 1.6)"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--font-family-heading, \"Merriweather\", \"Georgia\", \"Times New Roman\", serif)"
        }
      },
      "link": {
        "color": {
          "text": "var(--color-link, #0f172a)"
        }
      }
    }
  }
}
