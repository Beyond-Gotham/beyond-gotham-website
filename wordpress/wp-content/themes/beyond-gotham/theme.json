{
  "$schema": "https://schemas.wp.org/wp/6.3/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "custom": true,
      "defaultPalette": false,
      "palette": [
        { "slug": "background", "name": "Surface Background", "color": "var(--bg, #f4f6fb)" },
        { "slug": "foreground", "name": "Primary Text", "color": "var(--fg, #0f172a)" },
        { "slug": "primary", "name": "Primary Accent", "color": "var(--accent, #33d1ff)" },
        { "slug": "secondary", "name": "Secondary Accent", "color": "var(--accent-alt, #1aa5d1)" },
        { "slug": "muted", "name": "Muted Surface", "color": "var(--bg-muted, #e6edf7)" },
        { "slug": "link", "name": "Link", "color": "var(--color-link, #0f172a)" },
        { "slug": "link-hover", "name": "Link Hover", "color": "var(--color-link-hover, #1aa5d1)" }
      ]
    },
    "layout": {
      "contentSize": "min(100%, var(--content-max-width, 1080px))",
      "wideSize": "min(100%, var(--content-max-width, 1280px))"
    },
    "spacing": {
      "units": ["px", "rem", "em", "%", "vw", "vh"],
      "blockGap": "var(--grid-gap, 24px)"
    },
    "typography": {
      "customFontSize": true,
      "fluid": false,
      "fontFamilies": [
        {
          "slug": "body",
          "name": "Body",
          "fontFamily": "var(--font-family-body, \"Inter\", \"Segoe UI\", system-ui, -apple-system, BlinkMacSystemFont, \"Helvetica Neue\", Arial, sans-serif)"
        },
        {
          "slug": "heading",
          "name": "Headings",
          "fontFamily": "var(--font-family-heading, \"Merriweather\", \"Georgia\", \"Times New Roman\", serif)"
        }
      ],
      "fontSizes": [
        { "slug": "xs", "name": "XS", "size": "var(--font-size-xs, 0.75rem)" },
        { "slug": "sm", "name": "Small", "size": "var(--font-size-sm, 0.875rem)" },
        { "slug": "base", "name": "Base", "size": "var(--font-size-base, 1rem)" },
        { "slug": "lg", "name": "Large", "size": "var(--font-size-lg, 1.25rem)" },
        { "slug": "xl", "name": "XL", "size": "var(--font-size-xl, 1.75rem)" }
      ],
      "lineHeight": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--bg, #f4f6fb)",
      "text": "var(--fg, #0f172a)"
    },
    "typography": {
      "fontFamily": "var(--font-family-body, \"Inter\", \"Segoe UI\", system-ui, -apple-system, BlinkMacSystemFont, \"Helvetica Neue\", Arial, sans-serif)",
      "lineHeight": "var(--line-height-body, 1.6)"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--font-family-heading, \"Merriweather\", \"Georgia\", \"Times New Roman\", serif)"
        }
      },
      "link": {
        "color": {
          "text": "var(--color-link, #0f172a)"
        }
      }
    }
  }
}
